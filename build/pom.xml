<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>org.sc</groupId>
	<artifactId>build</artifactId>
	<version>0.0.1-SNAPSHOT</version>
	<packaging>pom</packaging>
	<name>build</name>
	<modules>
		<module>../utils</module>
		<module>../calcservices</module>
		<module>../webservices</module>
		<module>../webui</module>
		<module>../boot-webservices</module>
		<module>../crudservices</module>
	</modules>
	<repositories>
		<repository>
			<id>java.net2</id>
			<name>Repository hosting the jee6 artifacts</name>
			<url>http://download.java.net/maven/2</url>
		</repository>
	</repositories>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<inherited>true</inherited>
				<version>${compiler_plugin.version}</version>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
				</configuration>
			</plugin>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-war-plugin</artifactId>
				<configuration>
					<webXml>WebContent/WEB-INF/web.xml</webXml>
				</configuration>
			</plugin>
		</plugins>
	</build>
	<dependencies>
		<dependency>
			<groupId>commons-io</groupId>
			<artifactId>commons-io</artifactId>
			<version>${project.commons_io.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-lang</groupId>
			<artifactId>commons-lang</artifactId>
			<version>${project.commons_lang.version}</version>
		</dependency>
		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>${project.commons_logging.version}</version>
		</dependency>
		<dependency>
			<groupId>junit</groupId>
			<artifactId>junit</artifactId>
			<version>${project.junit.version}</version>
			<scope>test</scope>
		</dependency>

	</dependencies>
	<properties>
		<org.springframework.version>3.2.2.RELEASE</org.springframework.version>
		<project.hibernate.version>4.3.0.Final</project.hibernate.version>
		<project.spring-jpa.version>1.3.4.RELEASE</project.spring-jpa.version>
		<project.spring-orm.version>3.2.4.RELEASE</project.spring-orm.version>
		<project.spring.security.version>3.1.3.RELEASE</project.spring.security.version>
		<project.spring.webflow.version>2.3.2.RELEASE</project.spring.webflow.version>
		<project.spring_web.version>3.2.4.RELEASE</project.spring_web.version>
		<project.spring.webmvc.version>3.2.4.RELEASE</project.spring.webmvc.version>
		<spring.version>3.1</spring.version>
		<java.version>1.7</java.version>
		<compiler_plugin.version>3.0</compiler_plugin.version>
		<project.javaee.version>6.0</project.javaee.version>
		<project.mysql.version>1.0</project.mysql.version>
		<project.junit.version>4.10</project.junit.version>
		<project.spring_cloud.version>1</project.spring_cloud.version>
		<project.testng.version>6.1.1</project.testng.version>
		<project.commons_io.version>2.1</project.commons_io.version>
		<project.commons_lang.version>2.6</project.commons_lang.version>
		<project.commons_logging.version>1.1.1</project.commons_logging.version>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
</project>
